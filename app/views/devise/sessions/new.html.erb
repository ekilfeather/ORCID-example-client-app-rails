
<% title  nil %>  
    <div class="row">
    <div class="span3 well">

      <h3>Sign in using your ORCID account</h3>

      <p>
        <a href="/auth/orcid" class="auth_provider">
          <%= image_tag "orcid_64.png", :alt => "ORCID login" %>
        </a>
      </p>
    </div>

    <div class="span1">
      <h2>OR</h2>
    </div>

    <div class="span3 well">

      <h3>Sign in using your JOPMTS account</h3>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "well form-inline", :id => "user-login" }) do |f| %>  

      <fieldset>
      <p><%= f.label :email  %><br /><%= f.text_field :email, :class => "input-large"  %></p>
      <p><%= f.label :password %><br /><%= f.password_field :password, :class => "input-large" %></p>
      <p>
   <% if devise_mapping.rememberable? -%>  
   <%= f.check_box :remember_me %> <%= f.label :remember_me %>

   <% end %>  
   <%= f.submit "Sign in",  :class => "btn btn-primary btn-small" %></p>  

      </fieldset>

      <p>Don't have an account? 
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up now", new_registration_path(resource_name) %><br />
<% end -%>
      </p>

<% end %> 
    </div>
    </div>
