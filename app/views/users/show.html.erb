<hr />
<h3>My profile</h3>

<% if profile = current_user.profile %>


  <strong><%= link_to profile.lastname + ", " + profile.firstname + " " + profile.middleinitials, profile_path %></strong>
| <%= link_to "Edit", edit_profile_path %> 
| <%= link_to "Delete", delete_profile_path, :confirm => 'Are you sure you want to delete your profile?', :method => :delete, :class => "remove" %>

<br /><i> [if fetched from external service, need flag or link to external authn entry in profile table]</i>

<% else %>

None | <%= link_to "Create my profile now", new_profile_path %>

<% end%>

<hr />

<h3>External identities currently connected</h3>

<% if authentications = current_user.authentications %>
  <% if !authentications.empty? %>
    <p><strong>You can sign in to this account using:</strong></p>
    <div class="authentications">
      <% for authentication in authentications %>
        <div class="authentication">
          <%= image_tag "#{authentication.provider}_64.png" %>
          <div><%= authentication.uid if authentication.uid %><br />
            <%= link_to "Delete", authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "btn btn-mini btn-danger" %>
          </div>
          <div class="clear"></div>
        </div>
      <% end %>
      <div class="clear"></div>
    </div>
  <% else %>
 None
  <% end %>
<% end %>

